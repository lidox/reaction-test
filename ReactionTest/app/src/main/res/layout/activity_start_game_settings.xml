<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.artursworld.reactiontest.view.games.StartGameSettings">

    <Spinner
        android:id="@+id/start_game_settings_medicalid_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/start_game_settings_no_user_in_db_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/start_game_settings_operation_issue_textview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/start_game_settings_medicalid_spinner"
        android:layout_marginTop="20dp"
        android:text="@string/operation_issue_name" />

    <Spinner
        android:id="@+id/start_game_settings_operation_issue_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_game_settings_operation_issue_textview" />

    <Button
        android:id="@+id/start_game_settings_add_operationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/start_game_settings_operation_issue_spinner"
        android:layout_below="@+id/start_game_settings_operation_issue_textview"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryLight"
        android:onClick="onAddOperationIssueBtnCLick"
        android:text="@string/add" />

    <TextView
        android:id="@+id/start_game_settings_test_type"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/start_game_settings_operation_issue_spinner"
        android:layout_marginTop="20dp"
        android:text="@string/test_type" />

    <Spinner
        android:id="@+id/start_game_settings_test_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_game_settings_test_type" />

    <TextView
        android:id="@+id/start_game_settings_game_type_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/start_game_settings_test_type_spinner"
        android:layout_marginTop="20dp"
        android:text="@string/game_type" />

    <Spinner
        android:id="@+id/start_game_settings_game_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_game_settings_game_type_txt" />

    <Button
        android:id="@+id/start_game_settings_start_game_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_game_settings_game_type_spinner"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryLight"
        android:onClick="onStartGameBtnClick"
        android:text="@string/start_reaction_test" />


</RelativeLayout>
