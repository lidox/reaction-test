<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.artursworld.reactiontest.view.games.SingleGameResultView">

    <com.github.pavlospt.CircleView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:id="@+id/test"
        android:layout_height="300dp"
        app:cv_titleText="title"
        app:cv_subtitleText="subtitle"
        app:cv_titleSize="12dp"
        app:cv_subtitleSize="9dp"
        app:cv_fillRadius="0.9"
        app:cv_strokeWidthSize="5"/>

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/circle"
        android:layout_width="277dp"
        android:layout_height="277dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/test"
        CircleProgressView:cpv_autoTextSize="true"
        CircleProgressView:cpv_barColor="@color/colorPrimary"
        CircleProgressView:cpv_barWidth="35dp"
        CircleProgressView:cpv_contourSize="0dp"
        CircleProgressView:cpv_maxValue="100"
        CircleProgressView:cpv_rimColor="@color/colorPrimary"
        CircleProgressView:cpv_rimWidth="35dp"
        CircleProgressView:cpv_showUnit="true"
        CircleProgressView:cpv_spinColor="@color/colorPrimaryLight"
        CircleProgressView:cpv_text="haha"
        CircleProgressView:cpv_textColor="@color/colorAccent"
        CircleProgressView:cpv_textMode="Text"
        CircleProgressView:cpv_textScale="1"
        CircleProgressView:cpv_unit="@string/seconds"
        CircleProgressView:cpv_unitColor="@color/colorAccent"
        CircleProgressView:cpv_unitPosition="right_top"
        CircleProgressView:cpv_unitScale="1"
        CircleProgressView:cpv_value="10" />

    <TextView
        android:id="@+id/single_game_result_view_average_reaction_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle"
        android:layout_centerHorizontal="true"
        android:text="@string/average_reaction_time"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/single_game_result_view_average_reaction_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_game_result_view_average_reaction_time_label"
        android:layout_centerHorizontal="true"
        android:text="@string/placeholder_minus"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/single_game_result_view_best_reaction_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_game_result_view_average_reaction_time_text"
        android:layout_centerHorizontal="true"
        android:text="@string/best_reaction_time"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/single_game_result_view_best_reaction_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_game_result_view_best_reaction_time_label"
        android:layout_centerHorizontal="true"
        android:text="@string/placeholder_minus"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/single_game_result_view_finish_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_game_result_view_best_reaction_time_text"
        android:layout_margin="5dp"
        android:background="@color/colorAccentLight"
        android:onClick="onFinishBtnClick"
        android:text="@string/finish"
        android:textAppearance="?android:attr/textAppearanceButton" />

    <Button
        android:id="@+id/single_game_result_view_retry_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_game_result_view_finish_btn"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryLight"
        android:onClick="onRetryBtnClick"
        android:text="@string/retry"
        android:textAppearance="?android:attr/textAppearanceButton" />

    <Button
        android:id="@+id/single_game_result_view_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_game_result_view_retry_btn"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryLight"
        android:onClick="onDeleteBtnClick"
        android:text="@string/delete"
        android:textAppearance="?android:attr/textAppearanceButton" />

</RelativeLayout>
