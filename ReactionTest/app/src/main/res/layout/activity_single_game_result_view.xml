<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.artursworld.reactiontest.view.games.SingleGameResultView">

    <TextView
        android:id="@+id/single_game_result_view_average_reaction_time_label"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/average_reaction_time"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/single_game_result_view_average_reaction_time_text"
        android:layout_below="@+id/single_game_result_view_average_reaction_time_label"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/placeholder_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/single_game_result_view_best_reaction_time_label"
        android:layout_below="@+id/single_game_result_view_average_reaction_time_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/best_reaction_time"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/single_game_result_view_best_reaction_time_text"
        android:layout_below="@+id/single_game_result_view_best_reaction_time_label"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/placeholder_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/single_game_result_view_retry_btn"
        android:layout_below="@+id/single_game_result_view_best_reaction_time_text"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:text="@string/new_try"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onNewTryBtnClick" />

    <Button
        android:id="@+id/single_game_result_view_finish_btn"
        android:layout_below="@+id/single_game_result_view_retry_btn"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:text="@string/finish"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onFinishBtnClick" />

</RelativeLayout>
