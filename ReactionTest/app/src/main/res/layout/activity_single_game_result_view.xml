<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.artursworld.reactiontest.view.games.SingleGameResultView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.pavlospt.CircleView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle"
            android:layout_width="240dp"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            app:cv_fillRadius="0.9"
            app:cv_titleText="@string/placeholder_minus"
            app:cv_subtitleText="@string/placeholder_minus"
            app:cv_strokeColorValue="@color/colorPrimary"
            app:cv_strokeWidthSize="5"
            app:cv_subtitleColor="@color/colorPrimary"
            app:cv_subtitleSize="15sp"
            app:cv_titleColor="@color/colorAccentLight"
            app:cv_titleSize="30sp"
            app:cv_titleSubtitleSpace="40" />

        <!--
        <Button
            android:id="@+id/single_game_result_view_finish_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle"
            android:layout_margin="5dp"
            android:background="@color/colorAccentLight"
            android:onClick="onFinishBtnClick"
            android:text="@string/finish"
            android:textSize="@dimen/textAppearanceButton" />
            -->

        <com.dd.CircularProgressButton
        android:id="@+id/single_game_result_view_finish_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle"
        android:layout_margin="5dp"
        android:background="@color/colorAccentLight"
        android:onClick="onFinishBtnClick"
        android:text="@string/finish"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        app:cpb_colorIndicator="@color/colorAccentLight"
        app:cpb_colorProgress="@color/colorPrimary"
        app:cpb_cornerRadius="48dp"
        app:cpb_selectorIdle="@color/colorAccentLight"
        app:cpb_selectorComplete="@drawable/complete_state_selector"
        app:cpb_selectorError="@drawable/error_state_selector"
        app:cpb_textComplete="@string/finish"
        app:cpb_textError="@string/finish"
        app:cpb_textIdle="@string/finish" />

        <com.dd.CircularProgressButton
            android:id="@+id/single_game_result_view_retry_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/single_game_result_view_finish_btn"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:onClick="onRetryBtnClick"
            android:text="@string/retry"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            app:cpb_colorIndicator="@color/colorPrimaryLight"
            app:cpb_colorProgress="@color/colorPrimary"
            app:cpb_cornerRadius="48dp"
            app:cpb_selectorIdle="@color/colorPrimaryLight"
            app:cpb_selectorComplete="@drawable/complete_state_selector"
            app:cpb_selectorError="@drawable/error_state_selector"
            app:cpb_textComplete="@string/retry"
            app:cpb_textError="@string/retry"
            app:cpb_textIdle="@string/retry" />

        <!--
        <Button
            android:id="@+id/single_game_result_view_retry_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/single_game_result_view_finish_btn"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryLight"
            android:onClick="onRetryBtnClick"
            android:text="@string/retry"
            android:textAppearance="?android:attr/textAppearanceButton" />
        -->

        <com.dd.CircularProgressButton
            android:id="@+id/single_game_result_view_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/single_game_result_view_retry_btn"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryLight"
            android:onClick="onDeleteBtnClick"
            android:text="@string/delete"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            app:cpb_colorIndicator="@color/colorPrimaryLight"
            app:cpb_colorProgress="@color/colorPrimary"
            app:cpb_cornerRadius="48dp"
            app:cpb_selectorIdle="@color/colorPrimaryLight"
            app:cpb_selectorComplete="@drawable/complete_state_selector"
            app:cpb_selectorError="@drawable/error_state_selector"
            app:cpb_textComplete="@string/delete"
            app:cpb_textError="@string/delete"
            app:cpb_textIdle="@string/delete" />

        <!--
        <Button
            android:id="@+id/single_game_result_view_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/single_game_result_view_retry_btn"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryLight"
            android:onClick="onDeleteBtnClick"
            android:text="@string/delete"
            android:textAppearance="?android:attr/textAppearanceButton" />
        -->
    </RelativeLayout>
</ScrollView>
